{
  "name": "saas-boilerplate",
  "version": "1.0.0",
  "description": "SaaS boilerplate inspired by TabNews.",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && next dev",
    "services:up": "docker compose up -d",
    "services:stop": "docker compose stop",
    "services:down": "docker compose down",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint:check": "biome format --verbose",
    "lint:fix": "biome format --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adspacheco/saas-boilerplate.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adspacheco/saas-boilerplate/issues"
  },
  "homepage": "https://github.com/adspacheco/saas-boilerplate#readme",
  "dependencies": {
    "@tailwindcss/postcss": "4.1.13",
    "drizzle-orm": "0.44.5",
    "next": "15.5.2",
    "pg": "8.16.3",
    "postcss": "8.5.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwindcss": "4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@types/node": "24.3.1",
    "@types/pg": "8.15.5",
    "@types/react": "19.1.12",
    "drizzle-kit": "0.31.4",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
